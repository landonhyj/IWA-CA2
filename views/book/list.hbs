<h2> <a class="btn btn-secondary" href="/book"><i class="fa fa-plus-circle"></i>Add New</a> Book List</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title Name</th>
            <th>Author</th>
            <th>Year</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.titleName}}</td>
            <td>{{this.author}}</td>
            <td>{{this.year}}</td>
            <td>{{this.price}}</td>
            <td>
                <a href="/book/{{this._id}}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                <a href="/book/delete/{{this._id}}" onclick="return confirm('Please confirm that you want to delete this book ?');"><i class="fa fa-remove" style="color: red" aria-hidden="true"></i></a>

            </td>
        </tr>
        {{/each}}
    </tbody>

</table>