{{!-- viewTitle as a variable that with header 2 tag --}}
<h2>{{viewTitle}}</h2> 

{{!--  prevent the form to autocompletion the input, so that i set it to off --}}
<form action="/book" method="POST" autocomplete="off">
{{!-- This hidden input type is for when u updating an existing book record then show the value with the specific book's id that you've selected --}}
    <input type="hidden" name="_id" value="{{book._id}}">
{{!-- Created input field ,form-group with label name and input type text for title name and author ,the fields is require to fill up --}}
    <div class="form-group">
        <label>Title Name</label>
        <input type="text" class="form-control" name="titleName" placeholder="Title Name" required>
    </div>
    <div class="form-group">
        <label>Author</label>
        <input type="text" class="form-control" name="author" placeholder="Author" required >
    </div>
    {{!-- Created input field ,form-row with label name and input type number for year and price divided the position to half each ,the fields is require to fill up--}}
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Year</label>
            <input type="number" class="form-control" name="year" placeholder="Year" required>
        </div>
        <div class="form-group col-md-6">
            <label>Price</label>
            <input type="number" class="form-control" name="price" placeholder="Price" min="0.00" max="10000.00" step="0.01" required>
        </div>    
    </div>
    {{!-- Created the submit and book's list button ,with css icon --}}
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
         <a class="btn btn-secondary" href="/book/list"> <i class="fa fa-list-ul"></i> Book's list</a>  
    </div>

</form>